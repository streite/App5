<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.mairyu.app5.MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="0dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="Vehicle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtMotorcycle"
            android:layout_alignLeft="@+id/txtMotorcycle"
            android:layout_alignStart="@+id/txtMotorcycle"
            android:id="@+id/txtVehicle"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:gravity="center_horizontal"
            android:layout_weight="25"
            android:layout_gravity="center_horizontal"
            android:textSize="24sp" />

        <TextView
            android:text="Car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtVehicle"
            android:layout_alignLeft="@+id/txtVehicle"
            android:layout_alignStart="@+id/txtVehicle"
            android:id="@+id/txtCar"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:gravity="center_horizontal"
            android:layout_weight="25"
            android:layout_gravity="center_horizontal"
            android:textSize="24sp" />

        <TextView
            android:text="Motorcycle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="126dp"
            android:layout_marginStart="126dp"
            android:id="@+id/txtMotorcycle"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:gravity="center_horizontal"
            android:layout_weight="25"
            android:layout_gravity="center_horizontal"
            android:textSize="24sp" />

        <TextView
            android:text="Result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtResult"
            android:layout_weight="25"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:textSize="24sp" />

        <Button
            android:text="Go!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtCar"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="108dp"
            android:layout_marginStart="108dp"
            android:id="@+id/btnGo"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:layout_weight="25"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</RelativeLayout>
